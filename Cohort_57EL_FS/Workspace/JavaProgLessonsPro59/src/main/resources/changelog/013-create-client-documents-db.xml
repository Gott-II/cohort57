<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
                http://www.liquibase.org/xml/ns/dbchangelog
                https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="013-create-client-documents-db" author="ait">
        <createTable tableName="client_documents_db">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="client_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="doc_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="content_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="size" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="original_file_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <!-- HIER: fehlende Spalte ergÃ¤nzt -->
            <column name="file_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="data" type="VARBINARY(10000)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>

